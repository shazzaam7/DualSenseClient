<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:ic="using:FluentIcons.Avalonia.Fluent"
             xmlns:vm="clr-namespace:DualSenseClient.ViewModels.Controls"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="DualSenseClient.Views.Controls.ControllerSelector"
             x:DataType="vm:ControllerSelectorViewModel">
    <Design.DataContext>
        <vm:ControllerSelectorViewModel />
    </Design.DataContext>

    <Border Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
            CornerRadius="8"
            Padding="20">
        <StackPanel Spacing="15">
            <!-- Card Header -->
            <Grid ColumnDefinitions="Auto,*,Auto">
                <ic:SymbolIcon Symbol="XboxController"
                               FontSize="20"
                               Margin="0,0,10,0"
                               VerticalAlignment="Center" />
                <TextBlock Text="Available Controllers"
                           FontSize="16"
                           FontWeight="SemiBold"
                           VerticalAlignment="Center"
                           Grid.Column="1" />
                <Border Background="{DynamicResource AccentFillColorSecondaryBrush}"
                        CornerRadius="12"
                        Padding="10,4"
                        Grid.Column="2">
                    <TextBlock Text="{Binding Controllers.Count, StringFormat='{}{0} Connected'}"
                               FontSize="12"
                               FontWeight="SemiBold" />
                </Border>
            </Grid>

            <!-- Separator -->
            <Border Height="1"
                    Background="{DynamicResource DividerStrokeColorDefaultBrush}" />

            <!-- Controllers List -->
            <ItemsControl ItemsSource="{Binding Controllers}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Spacing="10" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="{DynamicResource SubtleFillColorSecondaryBrush}"
                                BorderBrush="{Binding IsSelected, Converter={StaticResource BoolToButtonBackgroundConverter}}"
                                BorderThickness="2"
                                CornerRadius="8"
                                Padding="15"
                                Cursor="Hand">

                            <!-- Context Flyout -->
                            <Border.ContextFlyout>
                                <MenuFlyout>
                                    <MenuItem Header="Rename"
                                              Command="{Binding StartRenamingCommand}">
                                        <MenuItem.Icon>
                                            <ic:SymbolIcon Symbol="Rename" FontSize="16" />
                                        </MenuItem.Icon>
                                    </MenuItem>

                                    <MenuItem Header="Disconnect"
                                              Command="{Binding DisconnectControllerCommand}"
                                              IsVisible="{Binding IsBluetooth}">
                                        <MenuItem.Icon>
                                            <ic:SymbolIcon Symbol="BluetoothConnected" FontSize="16" />
                                        </MenuItem.Icon>
                                    </MenuItem>

                                    <Separator />

                                    <MenuItem Header="Copy MAC Address"
                                              Command="{Binding CopyMacAddressCommand}">
                                        <MenuItem.Icon>
                                            <ic:SymbolIcon Symbol="Copy" FontSize="16" />
                                        </MenuItem.Icon>
                                    </MenuItem>
                                </MenuFlyout>
                            </Border.ContextFlyout>

                            <Grid ColumnDefinitions="Auto,*,Auto" RowDefinitions="Auto,Auto">
                                <!-- Controller Icon -->
                                <Border Grid.Row="0"
                                        Grid.Column="0"
                                        Grid.RowSpan="2"
                                        Background="{DynamicResource AccentFillColorSecondaryBrush}"
                                        CornerRadius="8"
                                        Width="56"
                                        Height="56"
                                        Margin="0,0,15,0"
                                        VerticalAlignment="Center">
                                    <ic:SymbolIcon Symbol="XboxController"
                                                   FontSize="28"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center" />
                                </Border>

                                <!-- Controller Info -->
                                <StackPanel Grid.Row="0"
                                            Grid.Column="1"
                                            Spacing="4"
                                            VerticalAlignment="Center">

                                    <!-- Name Display/Edit -->
                                    <Grid>
                                        <!-- Display Mode -->
                                        <StackPanel Orientation="Horizontal"
                                                    Spacing="8"
                                                    IsVisible="{Binding !IsRenaming}">
                                            <TextBlock Text="{Binding Name}"
                                                       FontSize="15"
                                                       FontWeight="SemiBold" />
                                            <!-- Edit Button (optional, for quick access) -->
                                            <Button Classes="AppBarButton"
                                                    Width="24"
                                                    Height="24"
                                                    Padding="4"
                                                    Command="{Binding StartRenamingCommand}"
                                                    ToolTip.Tip="Rename Controller">
                                                <ic:SymbolIcon Symbol="Edit" FontSize="12" />
                                            </Button>
                                        </StackPanel>

                                        <!-- Edit Mode -->
                                        <Grid IsVisible="{Binding IsRenaming}"
                                              ColumnDefinitions="*,Auto,Auto">
                                            <TextBox Grid.Column="0"
                                                     Text="{Binding EditingName}"
                                                     FontSize="15"
                                                     MinWidth="200"
                                                     KeyDown="OnRenameTextBoxKeyDown" />
                                            <Button Grid.Column="1"
                                                    Classes="AppBarButton"
                                                    Width="28"
                                                    Height="28"
                                                    Padding="4"
                                                    Margin="4,0,0,0"
                                                    Command="{Binding SaveNameCommand}"
                                                    ToolTip.Tip="Save">
                                                <ic:SymbolIcon Symbol="Checkmark"
                                                               FontSize="14"
                                                               Foreground="{DynamicResource SystemFillColorSuccessBrush}" />
                                            </Button>
                                            <Button Grid.Column="2"
                                                    Classes="AppBarButton"
                                                    Width="28"
                                                    Height="28"
                                                    Padding="4"
                                                    Margin="2,0,0,0"
                                                    Command="{Binding CancelRenamingCommand}"
                                                    ToolTip.Tip="Cancel">
                                                <ic:SymbolIcon Symbol="Dismiss"
                                                               FontSize="14"
                                                               Foreground="{DynamicResource SystemFillColorCriticalBrush}" />
                                            </Button>
                                        </Grid>
                                    </Grid>

                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <!-- Connection Type Badge -->
                                        <Border Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                                                CornerRadius="4"
                                                Padding="6,2">
                                            <StackPanel Orientation="Horizontal" Spacing="4">
                                                <ic:FluentIcon Icon="{Binding ConnectionIcon}"
                                                               FontSize="12"
                                                               Foreground="{DynamicResource TextFillColorSecondaryBrush}" />
                                                <TextBlock Text="{Binding ConnectionType}"
                                                           FontSize="11"
                                                           Foreground="{DynamicResource TextFillColorSecondaryBrush}" />
                                            </StackPanel>
                                        </Border>

                                        <!-- MAC Address -->
                                        <TextBlock Text="{Binding MacAddress}"
                                                   FontSize="11"
                                                   Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                                                   VerticalAlignment="Center" />
                                    </StackPanel>
                                </StackPanel>

                                <!-- Selected Indicator -->
                                <Border Grid.Row="0"
                                        Grid.Column="2"
                                        Grid.RowSpan="2"
                                        IsVisible="{Binding IsSelected}"
                                        Background="{DynamicResource AccentFillColorDefaultBrush}"
                                        CornerRadius="12"
                                        Padding="8,4"
                                        Margin="10,0,0,0"
                                        VerticalAlignment="Center">
                                    <StackPanel Orientation="Horizontal" Spacing="4">
                                        <ic:SymbolIcon Symbol="Checkmark"
                                                       FontSize="14"
                                                       Foreground="White" />
                                        <TextBlock Text="Selected"
                                                   FontSize="12"
                                                   FontWeight="SemiBold"
                                                   Foreground="White" />
                                    </StackPanel>
                                </Border>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>
    </Border>
</UserControl>